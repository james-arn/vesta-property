{
  "manifest_version": 3,
  "name": "Vesta Property Checklist",
  "version": "1.1",
  "description": "Evaluate property listings with ease using automated checklists.",
  "permissions": ["activeTab", "sidePanel", "storage", "tabs", "identity", "notifications"],
  "host_permissions": [
    "https://www.rightmove.co.uk/*",
    "https://o4508799628738560.ingest.de.sentry.io/*",
    "https://api.vestapropertychecker.com/*",
    "https://nominatim.openstreetmap.org/*",
    "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_eHh7H32th/.well-known/*",
    "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_eHh7H32th/oauth2/*",
    "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_eHh7H32th/login",
    "https://eu-west-2ehh7h32th.auth.eu-west-2.amazoncognito.com/*",
    "https://eu-west-2ehh7h32th.auth.eu-west-2.amazoncognito.com/oauth2/idpresponse",
    "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_JnzrCsnYE/.well-known/*",
    "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_JnzrCsnYE/oauth2/*",
    "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_JnzrCsnYE/login",
    "https://eu-west-2jnzrcsnye.auth.eu-west-2.amazoncognito.com/*",
    "https://eu-west-2jnzrcsnye.auth.eu-west-2.amazoncognito.com/oauth2/idpresponse",
    "https://d84l1y8p4kdic.cloudfront.net/*",
    "https://vesta-property-checker-prod.auth.eu-west-2.amazoncognito.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://www.google-analytics.com https://o4508799628738560.ingest.de.sentry.io https://api.vestapropertychecker.com https://nominatim.openstreetmap.org https://cognito-idp.eu-west-2.amazonaws.com https://eu-west-2ehh7h32th.auth.eu-west-2.amazoncognito.com https://eu-west-2jnzrcsnye.auth.eu-west-2.amazoncognito.com https://d84l1y8p4kdic.cloudfront.net https://vesta-property-checker-prod.auth.eu-west-2.amazoncognito.com; frame-src 'self' https://eu-west-2ehh7h32th.auth.eu-west-2.amazoncognito.com https://eu-west-2jnzrcsnye.auth.eu-west-2.amazoncognito.com https://vesta-property-checker-prod.auth.eu-west-2.amazoncognito.com;"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open Vesta Property Checklist"
  },
  "content_scripts": [
    {
      "matches": ["https://www.rightmove.co.uk/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["injectScript.js", "login-success.html", "logout-success.html"],
      "matches": [
        "https://www.rightmove.co.uk/*",
        "https://eu-west-2ehh7h32th.auth.eu-west-2.amazoncognito.com/*",
        "https://eu-west-2jnzrcsnye.auth.eu-west-2.amazoncognito.com/*",
        "https://vesta-property-checker-prod.auth.eu-west-2.amazoncognito.com/*"
      ]
    },
    {
      "resources": ["oauth2/idpresponse", "oauth2/authorize", "oauth2/token", "oauth2/userInfo"],
      "matches": [
        "https://cognito-idp.eu-west-2.amazonaws.com/*",
        "https://vesta-property-checker-prod.auth.eu-west-2.amazoncognito.com/*"
      ]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "externally_connectable": {
    "matches": ["*://*/*"]
  }
}
