{
  "manifest_version": 3,
  "name": "Vesta Property Checklist",
  "version": "2.0.1",
  "description": "Make better property buying decisions. Get scored Rightmove property listings and helpful checklists with Vesta.",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://*.rightmove.co.uk/*",
    "https://api.vestapropertychecker.com/*",
    "https://nominatim.openstreetmap.org/*",
    "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_eHh7H32th/*",
    "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_JnzrCsnYE/*",
    "https://eu-west-2ehh7h32th.auth.eu-west-2.amazoncognito.com/*",
    "https://eu-west-2jnzrcsnye.auth.eu-west-2.amazoncognito.com/*",
    "https://vesta-property-checker-prod.auth.eu-west-2.amazoncognito.com/*",
    "https://d84l1y8p4kdic.cloudfront.net/*"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; script-src-elem 'self'; worker-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://media.rightmove.co.uk https://www.google-analytics.com https://api.vestapropertychecker.com https://nominatim.openstreetmap.org https://cognito-idp.eu-west-2.amazonaws.com https://eu-west-2ehh7h32th.auth.eu-west-2.amazoncognito.com https://eu-west-2jnzrcsnye.auth.eu-west-2.amazoncognito.com https://d84l1y8p4kdic.cloudfront.net https://vesta-property-checker-prod.auth.eu-west-2.amazoncognito.com; frame-src 'self' https://eu-west-2ehh7h32th.auth.eu-west-2.amazoncognito.com https://eu-west-2jnzrcsnye.auth.eu-west-2.amazoncognito.com https://vesta-property-checker-prod.auth.eu-west-2.amazoncognito.com; img-src 'self' data:;",
    "sandbox": "sandbox allow-scripts; script-src 'self' 'wasm-unsafe-eval' blob:;"
  },
  "sandbox": {
    "pages": [
      "sandbox.html"
    ]
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open Vesta Property Checklist"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.rightmove.co.uk/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injectScript.js",
        "login-success.html",
        "logout-success.html",
        "sandbox.html"
      ],
      "matches": [
        "https://www.rightmove.co.uk/*",
        "https://eu-west-2ehh7h32th.auth.eu-west-2.amazoncognito.com/*",
        "https://eu-west-2jnzrcsnye.auth.eu-west-2.amazoncognito.com/*",
        "https://vesta-property-checker-prod.auth.eu-west-2.amazoncognito.com/*"
      ]
    },
    {
      "resources": [
        "oauth2/idpresponse",
        "oauth2/authorize",
        "oauth2/token",
        "oauth2/userInfo"
      ],
      "matches": [
        "https://cognito-idp.eu-west-2.amazonaws.com/*",
        "https://vesta-property-checker-prod.auth.eu-west-2.amazoncognito.com/*"
      ]
    },
    {
      "resources": [
        "sandbox.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "externally_connectable": {
    "matches": [
      "*://*/*"
    ]
  }
}